{
  "name": "yaz-dev-assistance",
  "private": true,
  "version": "0.1.0",
  "main": "dist-electron/main.js",
  "author": "Hafed El Ghrissi",
  "description": "Assistant Personnel Portable Cross-Platform",
  "scripts": {
    "dev": "vite",
    "build": "tsc && tsc -p tsconfig.electron.json && vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:5173 && electron .\""
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "clsx": "^2.1.0",
    "i18next": "^23.8.2",
    "i18next-browser-languagedetector": "^7.2.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.316.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.1",
    "react-leaflet": "^5.0.0",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/leaflet": "^1.9.21",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.52",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.2.1",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.hafed.yazdev",
    "productName": "Yaz Dev Assistance",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    }
  }
}